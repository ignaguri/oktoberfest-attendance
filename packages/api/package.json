{
  "name": "@prostcounter/api",
  "version": "0.1.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate-spec": "tsx src/scripts/generate-openapi.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.2.0",
    "@novu/api": "^3.11.2",
    "@prostcounter/db": "workspace:*",
    "@prostcounter/shared": "workspace:*",
    "@supabase/supabase-js": "^2.48.0",
    "hono": "^4.11.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "dotenv": "^17.2.3",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.8"
  }
}
