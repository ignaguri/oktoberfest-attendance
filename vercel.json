{
  "crons": [
    {
      "path": "/api/cron/scheduler",
      "schedule": "0 9 * * *"
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/.well-known/security.txt",
      "destination": "/api/security.txt"
    }
  ]
}
